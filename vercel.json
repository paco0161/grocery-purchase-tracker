{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/next"
      },
      {
        "src": "index.py",
        "use": "@vercel/python",
        "config": {
            "excludeFiles": "/{.next,*.cache,node_modules,public,app}/**"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/index.py"
      },
      {
        "src": "/(.*)",
        "dest": "/client/$1"
      }
    ]
}